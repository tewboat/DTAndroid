<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewPagerFragment">

    <fragment
        android:id="@+id/habitCreationFragment"
        android:name="com.example.dtandroid.ui.HabitCreationFragment"
        android:label="Create Habit">
        <argument
            android:name="habit"
            app:argType="com.example.dtandroid.data.Habit"
            app:nullable="true" />
        <argument
            android:name="type"
            app:argType="com.example.dtandroid.data.Type"
            app:nullable="false" />
    </fragment>
    <fragment
        android:id="@+id/habitsListFragment"
        android:name="com.example.dtandroid.ui.HabitsListFragment"
        android:label="Habits">
        <action
            android:id="@+id/action_habitsListFragment_to_habitCreationFragment"
            app:destination="@id/habitCreationFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.dtandroid.ui.ViewPagerFragment"
        android:label="Habits"
        tools:layout="@layout/fragment_view_pager">
        <action
            android:id="@+id/action_viewPagerFragment4_to_habitCreationFragment"
            app:destination="@id/habitCreationFragment" />
        <action
            android:id="@+id/action_viewPagerFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.dtandroid.ui.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about">
        <action
            android:id="@+id/action_aboutFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment" />
    </fragment>
</navigation>